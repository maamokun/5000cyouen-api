{
    "compilerOptions": {
        "resolveJsonModule": true,
        "target": "es2016",
        "lib": ["es6", "dom", "DOM.Iterable"],
        "module": "ES6",
        "moduleResolution": "bundler",
        "rootDir": "./src",
        "declaration": true,
        "outDir": "./dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    }
}